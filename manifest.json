{
  "manifest_version": 3,
  "name": "EventMate for Luma",
  "version": "1.0.0",
  "description": "自动读取Luma网站cookies并实现翻页数据抓取功能",
  "permissions": ["cookies", "activeTab", "storage"],
  "host_permissions": ["*://*.luma.ai/*", "*://*.lu.ma/*", "*://*.luma.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.luma.ai/*", "*://*.lu.ma/*", "*://*.luma.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EventMate for Luma",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["js/*"],
      "matches": ["*://*.luma.ai/*", "*://*.lu.ma/*", "*://*.luma.com/*"]
    }
  ]
}
